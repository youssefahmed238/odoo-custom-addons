<odoo>

    <record id="hr_payslip_tree_view_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.tree.view.inherit</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/header/button[@name='action_print_payslip']" position="after">
                <button name="action_export_payslips_excel"
                        type="object"
                        string="Export to Excel"/>
            </xpath>
        </field>
    </record>

    <record id="hr_payslip_form_view_inherit" model="ir.ui.view">
        <field name="name">hr.payslip.form.view.inherit</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_print_payslip']" position="after">
                <button name="action_export_payslips_excel"
                        type="object"
                        string="Export to Excel"/>
            </xpath>
        </field>
    </record>

</odoo>