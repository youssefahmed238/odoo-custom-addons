<odoo>
    <record id='classes_view_tree' model='ir.ui.view'>
        <field name='name'>classes tree</field>
        <field name='model'>classes</field>
        <field name='arch' type='xml'>
            <tree>
                <field name='name'/>
                <field name='class_code'/>
                <field name="years_of_study"/>
                <field name='student_ids' widget='many2many_tags'/>
                <field name = 'course_ids' widget='many2many_tags'/>
            </tree>
        </field>
    </record>

    <record id='classes_view_form' model='ir.ui.view'>
        <field name='name'>classes form</field>
        <field name='model'>classes</field>
        <field name='arch' type='xml'>
            <form>
                <sheet>
                    <group>
                        <field name='name'/>
                        <field name='class_code'/>
                        <field name="years_of_study"/>
                        <field name='student_ids' widget='many2many_tags'/>
                        <field name = 'course_ids' widget='many2many_tags'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='classes_view_search' model='ir.ui.view'>
        <field name='name'>classes search</field>
        <field name='model'>classes</field>
        <field name='arch' type='xml'>
            <search>
                <field name='name'/>
                <field name='class_code'/>
                <field name='years_of_study'/>
            </search>
        </field>
    </record>

    <record id='classes_action' model='ir.actions.act_window'>
        <field name='name'>classes</field>
        <field name='res_model'>classes</field>
    </record>
</odoo>