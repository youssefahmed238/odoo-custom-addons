<odoo>

    <record id="todo_tasks_category" model="ir.module.category">
        <field name="name">Todo Management</field>
    </record>

    <record id="todo_manager_group" model="res.groups">
        <field name="name">Todo Manager</field>
        <field name="category_id" ref="todo_management.todo_tasks_category"/>
    </record>

    <record id="todo_user_group" model="res.groups">
        <field name="name">Todo User</field>
        <field name="category_id" ref="todo_management.todo_tasks_category"/>
    </record>

    <record id="todo_tasks_user_rule" model="ir.rule">
        <field name="name">Todo Tasks User Rule</field>
        <field name="model_id" ref="todo_management.model_todo_tasks"/>
        <field name="domain_force">['|', ('create_uid', '=', user.id), ('assign_to', '=', user.id)]</field>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

</odoo>