<odoo>
    <record id="task_report" model="ir.actions.report">
        <field name="name">task report</field>
        <field name="model">todo.tasks</field>
        <field name="report_type">qweb-html</field>
        <field name="binding_type">report</field>
        <field name="binding_model_id" ref='model_todo_tasks'/>
        <field name="report_name">todo_management.task_report_template</field>
    </record>

    <template id="task_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <style>
                    .task-header,
                    .task-description {
                        font-size: 24px;
                        margin: 20px 0 20px 10px;
                    }

                    .task-header .task-header-element {
                        white-space: pre;
                    }

                    table {
                        font-size: 24px;
                        width: 90%;
                        text-align: center;
                        border-collapse: collapse;
                        margin: auto;
                    }

                    th, td {
                        border: 1px solid black;
                        padding: 10px;
                    }
                </style>
                <t t-foreach="docs" t-as="o">
                    <div class = "task-header">
                        <div class = "task-header-element"><b>TASK:</b>                      <t t-esc="o.name"/></div>
                        <div class = "task-header-element"><b>Due Date:</b>             <t t-esc="o.due_date"/></div>
                        <div class = "task-header-element"><b>Assign To:</b>             <t t-esc="o.assign_to.name"/></div>
                        <div class = "task-header-element"><b>Estimate Time:</b> <t t-esc="o.estimated_time"/> H</div>
                    </div>

                    <div class = "task-description">
                        <div><b>Description:</b></div>
                        <p><t t-esc="o.description"/></p>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <th colspan="4">Time Sheet</th>
                            </tr>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Duration (H)</th>
                            </tr>
                        </thead>
                        <t t-set="counter" t-value="0"/>
                        <tbody>
                            <t t-foreach="o.task_line_ids" t-as="line">
                                <t t-set="counter" t-value="counter + 1"/>
                                <tr>
                                    <td><t t-esc="counter"/></td>
                                    <td><t t-esc="line.date"/></td>
                                    <td><t t-esc="line.description"/></td>
                                    <td><t t-esc="line.duration"/> H</td>
                                </tr>
                            </t>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3">Total Time</td>
                                <td><t t-esc="o.total_time"/> h</td>
                            </tr>
                        </tfoot>
                    </table>
                </t>
            </t>
        </t>
    </template>
</odoo>